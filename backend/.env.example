# Server Configuration
PORT=3000
NODE_ENV=development
APP_URL=http://localhost:3000  # Base URL for generating unsubscribe links

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=invoice_guard
DB_USER=root
DB_PASSWORD=

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Authentication
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# AI Service Configuration
AI_PROVIDER=openai  # openai or anthropic
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
AI_MODEL=gpt-4

# Email Service Configuration
EMAIL_PROVIDER=sendgrid  # sendgrid, resend, or smtp
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
RESEND_API_KEY=re_your-resend-api-key-here
SENDER_EMAIL=noreply@invoiceguard.com
SENDER_NAME=Invoice Guard

# SMTP Configuration (if using SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SMS Service Configuration
TWILIO_ACCOUNT_SID=ACyour-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890

# Scheduler Configuration
CRON_SCHEDULE=0 */6 * * *  # Every 6 hours
ENABLE_SCHEDULER=true

# Budget and Cost Limits
DEFAULT_MONTHLY_BUDGET=100  # USD
COST_WARNING_THRESHOLD=0.8  # 80% of budget

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
ENABLE_METRICS=true
